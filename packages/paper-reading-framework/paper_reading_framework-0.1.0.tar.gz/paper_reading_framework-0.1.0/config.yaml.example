# Moonshot AI API 配置（国内版本）
# API 文档: https://platform.moonshot.cn/docs/guide/start-using-kimi-api
# 复制此文件为 config.yaml 并填入您的 API Key
moonshot:
  api_key: "your-api-key-here"  # 请在此处填入您的 API Key，或使用环境变量 MOONSHOT_API_KEY
  base_url: "https://api.moonshot.cn/v1"  # 国内 API 端点
  model: "moonshot-v1-32k"  # 可选: moonshot-v1-8k, moonshot-v1-32k, moonshot-v1-128k
  temperature: 0.7  # 温度参数，控制输出随机性
  max_tokens: 4096  # 最大生成 token 数

# 论文阅读配置
paper_reading:
  # 输入论文目录（建议保持干净，只放原始 PDF）
  papers_dir: "papers"

  # 新目录结构：所有产物按论文隔离，统一写入 `paper_workspace_dir` 下
  # 例：data/papers/2411.10825/notes、data/papers/2411.10825/summaries ...
  paper_workspace_dir: "data/papers"

  # 兼容旧结构（当未设置 paper_workspace_dir 时才会使用）
  notes_dir: "data/notes"
  code_dir: "data/code"
  summaries_dir: "data/summaries"
  knowledge_dir: "data/knowledge"
  guides_dir: "data/guides"


  # 分析配置
  extract_sections:
    - "abstract"
    - "introduction"
    - "methodology"
    - "results"
    - "conclusion"
    - "references"

  # 内化配置
  knowledge_base:
    format: "markdown"  # 笔记格式: markdown, json
    include_code: true
    include_diagrams: true

# SIGGRAPH 配置
siggraph:
  base_url: "https://www.siggraph.org"
  papers_url: "https://www.siggraph.org/publications"
  download_dir: "papers/siggraph"
  # Windows + PowerShell 下某些网络环境直连 https 可能会触发 SSL 错误；设置 UA 并优先从 http 入口跳转可提高成功率
  user_agent: "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0 Safari/537.36"
  verify_ssl: true
