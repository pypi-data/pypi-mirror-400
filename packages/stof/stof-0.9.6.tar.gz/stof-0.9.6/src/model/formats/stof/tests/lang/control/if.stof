/*!
 * If statements.
 * Scope: root.Lang.Control.If
 */


#[test]
fn if_case() {
    if (true) {
        // getting here
    } else {
        assert();
    }
}

#[test]
fn else_if_case() {
    if (false) {
        assert();
    } else if (true) {
        // getting here
    } else {
        assert();
    }
}

#[test]
fn else_case() {
    if (false) {
        assert();
    } else if (false) {
        assert();
    } else if (0) {
        assert();
    } else {
        // getting here
    }
}

#[test]
fn nested_if() {
    const val = true;
    let res: bool; // null
    assert_not(res);
    if (val) {
        if (val) {
            if (val) {
                if (false) {
                    
                } else {
                    res = true;
                }
            }
        }
    }
    assert(res);
}

#[test]
fn ternary() {
    let x = 10;
    
    let y = x > 5 ? true : false;
    assert(y);

    x = 3;
    y = x > 5 ? true : false;
    assert_not(y);
}

#[test]
fn not_order() {
    let dev = false;
    let sub = true;
    if (!dev && !sub) assert(false);
    assert(!dev);
    assert(!!sub);
    assert_eq(str(!!!!56), 'true');
}

#[test]
fn not_negative_literal() {
    if (!-45) assert(false);
}
