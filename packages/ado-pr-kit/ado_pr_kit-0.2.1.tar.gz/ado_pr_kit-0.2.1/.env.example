# Copy this file to .env and update with your Azure DevOps details

# Required: base organization URL (no trailing slash)
AZDO_ORG_URL=https://dev.azure.com/your-org

# Required: Personal Access Token with Code (read) and Pull Requests (read)
AZDO_PAT=your-readonly-pat

# Optional defaults
AZDO_PROJECT=your-project
AZDO_REPO_ID=your-repository-id
AZDO_DEFAULT_BRANCH=main

# Publishing credentials (required by scripts/publish.sh)
TWINE_USERNAME=__token__
TWINE_PASSWORD=pypi-xxxxxxxxxxxxxxxxxxxx

# Override to point at TestPyPI when rehearsing
# PYPI_REPOSITORY_URL=https://test.pypi.org/legacy/

# Skip upload but keep build/test steps
# PYPI_SKIP_UPLOAD=false
