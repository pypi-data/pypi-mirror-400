{
  "name": "anymap-ts",
  "version": "0.1.0",
  "description": "TypeScript frontend for anymap-ts interactive maps",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "build:maplibre": "esbuild src/maplibre/index.ts --bundle --format=esm --outfile=anymap_ts/static/maplibre.js --loader:.css=css",
    "build:mapbox": "esbuild src/mapbox/index.ts --bundle --format=esm --outfile=anymap_ts/static/mapbox.js --loader:.css=css",
    "build:leaflet": "esbuild src/leaflet/index.ts --bundle --format=esm --outfile=anymap_ts/static/leaflet.js --loader:.css=css --loader:.png=dataurl",
    "build:deckgl": "esbuild src/deckgl/index.ts --bundle --format=esm --outfile=anymap_ts/static/deckgl.js --loader:.css=css",
    "build:openlayers": "esbuild src/openlayers/index.ts --bundle --format=esm --outfile=anymap_ts/static/openlayers.js --loader:.css=css",
    "build:cesium": "esbuild src/cesium/index.ts --bundle --format=esm --outfile=anymap_ts/static/cesium.js --loader:.css=css --external:cesium",
    "build:custom-css": "esbuild src/styles/maplibre.css --bundle --outfile=anymap_ts/static/custom.css --loader:.css=css",
    "build": "npm run build:maplibre",
    "build:all": "npm run build:maplibre && npm run build:mapbox && npm run build:leaflet && npm run build:deckgl && npm run build:openlayers && npm run build:cesium",
    "build:prod": "npm run build:all -- --minify --sourcemap",
    "watch": "npm run build:maplibre -- --watch",
    "dev": "npm run watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf anymap_ts/static/*.js anymap_ts/static/*.css anymap_ts/static/*.map"
  },
  "dependencies": {
    "maplibre-gl": "5.14.0",
    "mapbox-gl": "^3.9.0",
    "leaflet": "^1.9.4",
    "@deck.gl/core": "^9.0.0",
    "@deck.gl/layers": "^9.0.0",
    "@deck.gl/aggregation-layers": "^9.0.0",
    "@deck.gl/mapbox": "^9.0.0",
    "ol": "^10.0.0",
    "cesium": "^1.120.0",
    "maplibre-gl-layer-control": "^0.3.0",
    "maplibre-gl-geo-editor": "^0.3.2",
    "@geoman-io/maplibre-geoman-free": "^0.5.5"
  },
  "devDependencies": {
    "@anywidget/types": "^0.2.0",
    "@types/geojson": "^7946.0.14",
    "@types/leaflet": "^1.9.0",
    "@types/node": "^22.10.5",
    "esbuild": "^0.24.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8",
    "jsdom": "^25.0.1",
    "concurrently": "^9.1.2"
  },
  "peerDependencies": {
    "maplibre-gl": ">=5.0.0"
  },
  "files": [
    "src/**/*",
    "anymap_ts/static/*"
  ],
  "keywords": [
    "maplibre",
    "maps",
    "anywidget",
    "jupyter",
    "typescript",
    "gis",
    "geospatial"
  ],
  "author": "Qiusheng Wu <giswqs@gmail.com>",
  "license": "MIT"
}
