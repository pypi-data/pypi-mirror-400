/* OrKa Textual Application Styles */

/* Global Screen Styles */
Screen {
    background: $background;
    color: $text;
}

/* Header and Footer */
Header {
    background: $primary;
    color: $text;
    text-style: bold;
}

Footer {
    background: $panel;
    color: $text-muted;
}

/* Container Styles */
.container {
    background: $surface;
    border: solid $primary;
    margin: 1;
    padding: 1;
}

.container-compact {
    background: $surface;
    border: solid $primary;
    margin: 0;
    padding: 0 1;
    height: 3;
    color: $accent;
    text-style: bold;
}

.stats-container {
    background: $success 20%;
    border: solid $success;
    color: $text;
}

.memory-container {
    background: $secondary 20%;
    border: solid $secondary;
    color: $text;
    height: 45%;
    min-height: 12;
}

.logs-container {
    background: $warning 20%;
    border: solid $warning;
    color: $text;
    height: 50%;
    min-height: 15;
}

.health-container {
    background: $error 20%;
    border: solid $error;
    color: $text;
}

.health-container-compact {
    background: $error 20%;
    border: solid $error;
    color: $text;
    height: 8;
    margin: 1;
    padding: 1;
}

.health-main-container {
    background: $primary 10%;
    border: solid $primary;
    color: $text;
    margin: 1;
    padding: 1 2;
    height: 100%;
}

/* Widget Styles */
DataTable {
    background: $surface;
    color: $text;
}

DataTable > .datatable--header {
    background: $primary;
    color: $text;
    text-style: bold;
}

DataTable > .datatable--cursor {
    background: $accent;
    color: $text;
}

Static {
    background: transparent;
    color: $text;
}

Label {
    background: transparent;
    color: $text;
}

/* Progress Bar Styles */
ProgressBar > .bar--bar {
    color: $success;
}

ProgressBar > .bar--complete {
    color: $success;
}

ProgressBar > .bar--indeterminate {
    color: $warning;
}

/* Button Styles */
Button {
    background: $primary;
    color: $text;
    border: solid $primary 80%;
}

Button:hover {
    background: $primary 80%;
    color: $text;
}

Button.-primary {
    background: $primary;
    color: $text;
}

Button.-success {
    background: $success;
    color: $text;
}

Button.-warning {
    background: $warning;
    color: $text;
}

Button.-error {
    background: $error;
    color: $text;
}

/* Special Layout Classes */
.dashboard-grid {
    layout: grid;
    grid-size: 2 3;
    grid-gutter: 1;
    grid-rows: 1fr 2fr 2fr;
}

.memory-grid {
    layout: grid;
    grid-size: 1 2;
    grid-gutter: 1;
}

/* Enhanced content panels for better scrolling support */
.content-panel {
    height: 40%;
    border: solid $primary;
    padding: 0;
    margin: 1;
    overflow: hidden;
}

/* DataTable styling for better space utilization */
DataTable {
    height: 100%;
    min-height: 8;
    background: $surface;
}

LogsWidget {
    height: 100%;
    min-height: 10;
}

MemoryTableWidget {
    height: 100%;
    min-height: 10;
}

#short-content-panel, #long-content-panel, #logs-content-panel {
    height: 45%;
    min-height: 12;
    display: block;
    overflow: hidden;
}

/* Scrollable content containers using overflow auto */
#short-selected-content, #long-selected-content, #logs-selected-content {
    padding: 1;
    height: 100%;
    overflow-y: auto;
    overflow-x: hidden;
    scrollbar-background: $panel;
    scrollbar-color: $primary;
    scrollbar-color-hover: $accent;
    scrollbar-color-active: $accent;
}

/* Static content inside scrollable containers */
#short-content-text, #long-content-text, #logs-content-text {
    padding: 0;
    background: transparent;
    color: $text;
    height: auto;
    width: 100%;
}

.full-width {
    width: 100%;
}

.half-width {
    width: 50%;
}

.quarter-width {
    width: 25%;
}

/* Memory table styling */
MemoryTableWidget {
    scrollbar-corner-color: $panel;
    scrollbar-color: $primary;
    scrollbar-color-hover: $accent;
    scrollbar-color-active: $accent;
}

MemoryTableWidget > DataTable {
    scrollbar-corner-color: $panel;
}

/* Row highlighting for checkbox interaction */
MemoryTableWidget DataTable > .datatable--cursor {
    background: $primary 30%;
}

MemoryTableWidget DataTable > .datatable--hover {
    background: $accent 20%;
}

/* Status Indicators */
.status-good {
    color: $success;
    text-style: bold;
}

.status-warning {
    color: $warning;
    text-style: bold;
}

.status-error {
    color: $error;
    text-style: bold;
}

.status-info {
    color: $secondary;
    text-style: bold;
}

/* Metric Display */
.metric-value {
    text-style: bold;
    color: $accent;
}

.metric-label {
    color: $text-muted;
}

.metric-trend-up {
    color: $success;
    text-style: bold;
}

.metric-trend-down {
    color: $error;
    text-style: bold;
}

.metric-trend-stable {
    color: $secondary;
}

/* Loading and Error States */
.loading {
    color: $warning;
    text-style: italic;
}

.error {
    color: $error;
    text-style: bold;
}

.success {
    color: $success;
    text-style: bold;
}

/* Memory Type Indicators */
.memory-short {
    color: $secondary;
}

.memory-long {
    color: $success;
}

.memory-expired {
    color: $error;
}

.memory-active {
    color: $accent;
}

/* Chart and Graph Styles */
.chart-container {
    background: $surface 80%;
    border: solid $primary 80%;
    padding: 1;
}

/* Memory Logs Screen Specific Layout - 50-50 split */
#logs-top-section {
    height: 50%;
}

#orchestration-logs-table {
    height: 100%;
}

/* Short Memory Screen Layout - 10% header, 45% table, 45% content panel */
#short-memory-header {
    height: 10%;
    max-height: 10%;
}

#short-memory-content {
    height: 45%;
    max-height: 45%;
}

#short-memory-table {
    height: 100%;
}

/* Long Memory Screen Layout - 10% header, 45% table, 45% content panel */
#long-memory-header {
    height: 10%;
    max-height: 10%;
}

#long-memory-content {
    height: 45%;
    max-height: 45%;
}

#long-memory-table {
    height: 100%;
}

/* Responsive Design - handled by Textual's built-in responsive system */

/* Add these styles for better metadata display */
Static#short-selected-content,
Static#long-selected-content, 
Static#logs-selected-content {
    overflow-y: auto;
    overflow-x: hidden;
    scrollbar-size: 1 1;
    scrollbar-size-vertical: 1;
    scrollbar-size-horizontal: 0;
    scrollbar-background: $panel;
    scrollbar-color: $primary;
    scrollbar-color-hover: $accent;
    scrollbar-color-active: $accent;
    height: 100%;
    padding: 1;
    margin: 0;
} 