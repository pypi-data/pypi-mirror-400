# ==========================================
# YouTube Search MCP Configuration Template
# ==========================================
# Copy this file to .env and uncomment lines to override defaults.

# ------------------------------------------
# 1. Download Settings
# ------------------------------------------
# Directory where downloaded files will be saved.
# Supports expansion: %USERPROFILE% (Win), $HOME (Linux/Mac), ~ (Home)
YT_MCP_DOWNLOAD_DIR=downloads

# Video Quality: best, high, medium, low
# YT_MCP_DEFAULT_VIDEO_QUALITY=best

# Audio Quality: best, high, medium, low
# YT_MCP_DEFAULT_AUDIO_QUALITY=best

# Default Output Formats
# YT_MCP_DEFAULT_VIDEO_FORMAT=mp4
# YT_MCP_DEFAULT_AUDIO_FORMAT=mp3

# Minimum Disk Space (MB) required to start download
# YT_MCP_MIN_DISK_SPACE_MB=100

# ------------------------------------------
# 2. Search Settings
# ------------------------------------------
# Default number of results to return
# YT_MCP_DEFAULT_MAX_RESULTS=10

# Maximum limit for results (hard limit)
# YT_MCP_MAX_RESULTS_LIMIT=50

# Request timeout in seconds
# YT_MCP_SEARCH_TIMEOUT=30

# Max retries for failed requests
# YT_MCP_MAX_RETRIES=3

# ------------------------------------------
# 3. Logging & Output
# ------------------------------------------
# Log Level: DEBUG, INFO, WARNING, ERROR
YT_MCP_LOG_LEVEL=INFO

# Output Format: json, markdown
# YT_MCP_DEFAULT_FORMAT=json