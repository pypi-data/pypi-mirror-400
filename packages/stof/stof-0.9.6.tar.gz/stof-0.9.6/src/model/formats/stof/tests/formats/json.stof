#[test]
fn stringify_json() {
    const object = new {
        a: 'hello',
        b: 42,
        c: true,
    };
    const json = stringify('json', object);
    drop(object);

    assert_eq(typeof json, 'str');
    assert_eq(json, '{"a":"hello","b":42,"c":true}');
}

#[test]
fn parse_json() {
    const json = '{"a":"hello","b":42,"c":true}';
    const object = new {};
    parse(json, object, format = 'json');
    
    assert_eq(object.a, 'hello');
    assert_eq(object.b, 42);
    assert(object.c);
    assert_eq(stringify('json', object), json);
    drop(object);
}

Imports: {
    import './test.json'; // default use self as scope
    import json './test.json' as self.Imported; // format and path

    #[test]
    fn import_json() {
        assert_eq(self.message, 'hello, world');
        assert_eq(self.person.name, 'Bob Smith');
        assert_eq(self.person.age, 42);

        assert_eq(self.Imported.message, 'hello, world');
        assert_eq(self.Imported.person.name, 'Bob Smith');
        assert_eq(self.Imported.person.age, 42);
    }
}
