{
    "name": "chapter_metadata",
    "strict": true,
    "schema": {
        "type": "object",
        "properties": {
            "chapter": {
                "type": "string",
                "description": "The chapter number or identifier."
            },
            "title": {
                "type": "string",
                "description": "The title of the chapter."
            },
            "url": {
                "type": "string",
                "description": "The URL where the chapter can be accessed."
            },
            "content": {
                "type": "array",
                "items": {
                    "type": "string"
                },
                "description": "An array of paragraphs containing the content of the chapter."
            }
        },
        "required": [
            "chapter",
            "title",
            "url",
            "content"
        ],
        "additionalProperties": false
    }
}
