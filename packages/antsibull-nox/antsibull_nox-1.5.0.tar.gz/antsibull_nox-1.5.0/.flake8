[flake8]
count = True
# reduce to 10 later:
max-complexity = 20
max-line-length = 100
statistics = True
# These rules conflict with black
ignore = E203, E704, W503

# Line in multi-line string is too long:
per-file-ignores =
    src/antsibull_nox/init.py:E501
    tests/unit/messages/test_parse.py:E501
