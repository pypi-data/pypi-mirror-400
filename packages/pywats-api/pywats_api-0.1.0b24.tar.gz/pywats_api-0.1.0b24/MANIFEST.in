# MANIFEST.in - Controls what goes into source distribution (sdist)

# Include essential files
include LICENSE
include README.md
include CHANGELOG.md
include pyproject.toml

# Include all source code
recursive-include src *.py
recursive-include src *.pyi
recursive-include src *.typed

# Include package data
recursive-include src *.json
recursive-include src *.md

# Exclude tests and development files
prune tests
prune converters
prune scripts
prune docs
prune .github
prune examples

# Exclude specific files
exclude .env
exclude .env.template
exclude .flake8
exclude pytest.ini
exclude .coverage
exclude pywats.log

# Exclude all markdown files in root except README and CHANGELOG
# Working notes and internal documentation
exclude ARCHITECTURE_*.md
exclude CLIENT_*.md
exclude CLOUD_*.md
exclude CONVERTER_*.md
exclude CRITICAL_*.md
exclude ENVIRONMENT_*.md
exclude INTERNAL_*.md
exclude LOGGING_*.md
exclude PRODUCTION_*.md
exclude QUICK_REFERENCE.md
exclude RELEASE_*.md
exclude TIMEZONE_*.md

# Exclude build artifacts
global-exclude *.pyc
global-exclude *.pyo
global-exclude __pycache__
global-exclude *.so
global-exclude .DS_Store

# Exclude generated metadata directories (can appear locally after editable installs)
prune src/pywats_api.egg-info
global-exclude *.egg-info
