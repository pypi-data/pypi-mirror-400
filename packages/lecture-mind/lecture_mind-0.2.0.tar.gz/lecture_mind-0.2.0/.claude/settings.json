{
  "permissions": {
    "allow": [
      "Read",
      "Glob",
      "Grep",
      "Write(tests/**/*)",
      "Write(docs/**/*)",
      "Write(src/**/*)",
      "Write(notebooks/**/*)",
      "Edit(tests/**/*)",
      "Edit(docs/**/*)",
      "Edit(src/**/*)",
      "Bash(pytest:*)",
      "Bash(python -m pytest:*)",
      "Bash(ruff check:*)",
      "Bash(ruff format:*)",
      "Bash(mypy:*)",
      "Bash(python -m mypy:*)",
      "Bash(pip install:*)",
      "Bash(python:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "WebSearch"
    ],
    "deny": [
      "Bash(rm -rf:*)",
      "Bash(rm -r:*)",
      "Write(.git/**/*)",
      "Edit(.git/**/*)",
      "Bash(git push --force:*)",
      "Bash(git reset --hard:*)"
    ]
  },
  "env": {
    "PYTHONPATH": "src",
    "PYTHONDONTWRITEBYTECODE": "1"
  }
}
