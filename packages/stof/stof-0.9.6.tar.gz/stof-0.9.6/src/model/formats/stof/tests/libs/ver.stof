#[test]
fn major() {
    let v = 4.5.6-release+build;
    assert_eq(v.major(), 4);
}

#[test]
fn minor() {
    let v = 4.5.6-release+build;
    assert_eq(v.minor(), 5);
}

#[test]
fn patch() {
    let v = 4.5.6-release+build;
    assert_eq(v.patch(), 6);
}

#[test]
fn release() {
    let v = 4.5.6-release+build;
    assert_eq(v.release(), 'release');
}

#[test]
fn build() {
    let v = 4.5.6-release+build;
    assert_eq(v.build(), 'build');
}

#[test]
fn set_major() {
    let v = 4.5.6-release+build;
    v.set_major(6);
    assert_eq(v, 6.5.6-release+build);
}

#[test]
fn set_minor() {
    let v = 4.5.6-release+build;
    v.set_minor(6);
    assert_eq(v, 4.6.6-release+build);
}

#[test]
fn set_patch() {
    let v = 4.5.6-release+build;
    v.set_patch(7);
    assert_eq(v, 4.5.7-release+build);
}

#[test]
fn set_release() {
    let v = 4.5.6-release+build;
    v.set_release('changed');
    assert_eq(v, 4.5.6-changed+build);
}

#[test]
fn set_build() {
    let v = 4.5.6-release+build;
    v.set_build('changed');
    assert_eq(v, 4.5.6-release+changed);
}

#[test]
fn clear_release() {
    let v = 4.5.6-release+build;
    v.clear_release();
    assert_eq(v, 4.5.6+build);
}

#[test]
fn clear_build() {
    let v = 4.5.6-release+build;
    v.clear_build();
    assert_eq(v, 4.5.6-release);
}
