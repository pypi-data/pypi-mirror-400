# Include ONLY essential SDK files
include SDK_README.md
include LICENSE
include setup.py
include pyproject.toml

# Include package data
recursive-include chloros_sdk *.py

# Exclude everything else
prune docs
prune examples
prune tests
prune ui
prune resources
prune mip
prune references
prune scripts
prune hooks
prune flatFields
prune assets
prune renderer

global-exclude *.exe
global-exclude *.bat
global-exclude *.ps1
global-exclude *.vbs
global-exclude *.hta
global-exclude *.html
global-exclude *.js
global-exclude *.ts
global-exclude *.css
global-exclude *.md
global-exclude *.nsh
global-exclude *.txt
global-exclude *.bin
global-exclude *.dll
global-exclude *.ico
global-exclude *.png
global-exclude *.svg
global-exclude *.tif
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
global-exclude *.so
global-exclude *.dylib

# But DO include essential documentation
include SDK_README.md
include LICENSE














