<odoo>
    <record id="rma_operation_kanban" model="ir.ui.view">
        <field name="name">rma.operation.kanban</field>
        <field name="model">rma.operation</field>
        <field name="arch" type="xml">
            <kanban
                highlight_color="color"
                class="o_rma_kanban"
                records_draggable="0"
                create="0"
                group_create="false"
                can_open="0"
            >
                <field name="color" />
                <field name="count_rma_draft" />
                <field name="count_rma_awaiting_action" />
                <field name="count_rma_processed" />
                <templates>
                    <t t-name="menu" t-if="!selection_mode">
                        <div class="container">
                            <div class="row">
                                <div class="col-6">
                                    <h5
                                        role="menuitem"
                                        class="o_kanban_card_manage_title"
                                    >View
                                    </h5>
                                    <div role="menuitem">
                                        <a name="get_action_all_rma" type="object">All
                                        </a>
                                    </div>
                                    <div role="menuitem">
                                        <a
                                            name="get_action_rma_tree_draft"
                                            type="object"
                                        >Draft
                                        </a>
                                    </div>
                                    <div role="menuitem">
                                        <a
                                            name="get_action_rma_tree_awaiting_action"
                                            type="object"
                                        >Awaiting Action
                                        </a>
                                    </div>
                                    <div role="menuitem">
                                        <a
                                            name="get_action_rma_tree_processed"
                                            type="object"
                                        >Processed
                                        </a>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <h5
                                        role="menuitem"
                                        class="o_kanban_card_manage_title"
                                    >
                                        <a name="%(action_rma_form)d" type="action">New
                                        </a>
                                    </h5>
                                </div>
                            </div>

                            <div
                                t-if="widget.editable"
                                class="o_kanban_card_manage_settings row"
                            >
                                <div class="col-8" role="menuitem" aria-haspopup="true">
                                    <field name="color" widget="kanban_color_picker" />
                                </div>
                                <div class="col-4 text-end">
                                    <a
                                        class="dropdown-item"
                                        role="menuitem"
                                        type="edit"
                                    >Configuration
                                    </a>
                                </div>
                            </div>
                        </div>
                    </t>

                    <t t-name="card">
                        <div name="rma_operation" class="px-2">
                            <a
                                t-if="!selection_mode"
                                type="object"
                                name="get_action_all_rma"
                            >
                                <field class="fw-bold fs-4" name="name" />
                            </a>
                            <field
                                t-if="selection_mode"
                                class="fw-bold fs-4"
                                name="name"
                            />

                            <div t-if="!selection_mode" class="row mt-3">
                                <div class="col-9">
                                    <button
                                        class="btn btn-link"
                                        name="get_action_rma_tree_draft"
                                        type="object"
                                    >
                                        <span>Draft</span>
                                    </button>
                                </div>
                                <div class="col-3">
                                    <button
                                        class="btn btn-link"
                                        name="get_action_rma_tree_draft"
                                        type="object"
                                    >
                                        <span t-esc="record.count_rma_draft.value" />
                                    </button>
                                </div>
                                <div class="col-9">
                                    <button
                                        class="btn btn-link"
                                        name="get_action_rma_tree_awaiting_action"
                                        type="object"
                                    >
                                        <span>Awaiting action</span>
                                    </button>
                                </div>
                                <div class="col-3">
                                    <button
                                        class="btn btn-link"
                                        name="get_action_rma_tree_awaiting_action"
                                        type="object"
                                    >
                                        <span
                                            t-esc="record.count_rma_awaiting_action.value"
                                        />
                                    </button>
                                </div>
                                <div class="col-9">
                                    <button
                                        class="btn btn-link"
                                        name="get_action_rma_tree_processed"
                                        type="object"
                                    >
                                        <span>Processed</span>
                                    </button>
                                </div>
                                <div class="col-3">
                                    <button
                                        class="btn btn-link"
                                        name="get_action_rma_tree_processed"
                                        type="object"
                                    >
                                        <span
                                            t-esc="record.count_rma_processed.value"
                                        />
                                    </button>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="rma_dashboard_action" model="ir.actions.act_window">
        <field name="name">RMA Overview</field>
        <field name="res_model">rma.operation</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create a new RMA
                operation
            </p>
            <p>The RMA operation system allows you to configure each return
                operation
                with specific settings that will adjust its behavior.
            </p>
        </field>
    </record>

    <menuitem
        action="rma_dashboard_action"
        id="rma_dashboard_menu"
        parent="rma_menu"
        sequence="0"
        name="Overview"
    />
</odoo>
