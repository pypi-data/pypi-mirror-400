{
  "permissions": {
    "allow": [
      "WebFetch(domain:github.com)",
      "Bash(pip install:*)",
      "Bash(python3 -m pip install:*)",
      "Bash(source .venv/bin/activate)",
      "Bash(source:*)",
      "Bash(invar guard:*)",
      "Bash(invar sig:*)",
      "Bash(invar map:*)",
      "Bash(invar test:*)",
      "Bash(invar verify:*)",
      "Bash(invar rules:*)",
      "Bash(git add:*)",
      "Bash(git reset:*)",
      "Bash(git rm:*)",
      "Bash(git commit:*)",
      "Bash(git restore:*)",
      "Bash(git push)",
      "Bash(git status)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(ruff:*)",
      "Bash(INVAR_MODE=agent invar guard:*)",
      "Bash(python -m invar.shell.cli guard:*)",
      "mcp__plugin_serena_serena__find_symbol"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/PreToolUse.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/PostToolUse.sh"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/UserPromptSubmit.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/Stop.sh"
          }
        ]
      }
    ]
  },
  "mcpServers": {
    "invar": {
      "command": "/Users/tefx/Projects/Invar/.venv/bin/python",
      "args": [
        "-m",
        "invar.mcp"
      ]
    }
  },
  "outputStyle": "default"
}
