# MANIFEST.in - Controls what additional files are included in PyPI distribution
# Note: src/tbr/ is automatically included by setuptools

# Include essential project files
include README.md
include LICENSE

# Include package metadata
include src/tbr/py.typed

# Include user-facing documentation
recursive-include docs *.md *.rst
recursive-exclude docs/_build *

# Include usage examples
recursive-include examples *.py *.rst *.md

# Exclude all development and build artifacts
exclude .gitignore
exclude .pre-commit-config.yaml
exclude Makefile
exclude tox.ini
exclude coverage.xml
exclude CHANGELOG.md
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * *.pyo
recursive-exclude * .DS_Store
recursive-exclude * .pytest_cache
recursive-exclude * .mypy_cache
recursive-exclude * .coverage
recursive-exclude * .tox
recursive-exclude * htmlcov
recursive-exclude * *.egg-info
recursive-exclude * build
recursive-exclude * dist

# Exclude development-only directories
recursive-exclude ai_helper_notes *
recursive-exclude references *
recursive-exclude scripts *
recursive-exclude notebooks *
recursive-exclude tests *
