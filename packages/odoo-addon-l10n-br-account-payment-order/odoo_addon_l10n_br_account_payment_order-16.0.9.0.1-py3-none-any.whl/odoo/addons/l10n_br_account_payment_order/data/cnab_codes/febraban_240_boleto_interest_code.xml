    <record id="febraban_240_boleto_interest_code_1" model="l10n_br_cnab.code">
        <field name="name">Valor por Dia</field>
        <field name="code">1</field>
        <field name="code_type">interest_code</field>
	<field
            name="bank_ids"
            eval="[Command.set([ref('l10n_br_base.res_bank_085'),ref('l10n_br_base.res_bank_237'),ref('l10n_br_base.res_bank_001'),ref('l10n_br_base.res_bank_104'),ref('l10n_br_base.res_bank_748')])]"
        />
        <field
            name="payment_method_ids"
            eval="[Command.set([ref('payment_mode_type_cnab240')])]"
        />
    </record>

