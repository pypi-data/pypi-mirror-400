@prefix ex: <http://datashapes.org/sh/tests/core/property/property-001.test#> .
@prefix mf: <http://www.w3.org/2001/sw/DataAccess/tests/test-manifest#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix sht: <http://www.w3.org/ns/shacl-test#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

ex:Address a rdfs:Class ;
    rdfs:label "Address" ;
    rdfs:subClassOf rdfs:Resource .

ex:City a rdfs:Class ;
    rdfs:label "City" ;
    rdfs:subClassOf rdfs:Resource .

ex:Person a rdfs:Class ;
    rdfs:label "Person" ;
    rdfs:subClassOf rdfs:Resource .

ex:InvalidPerson1 a ex:Person ;
    ex:address ex:InvalidAddress .

ex:InvalidPerson2 a ex:Person ;
    ex:address ex:InvalidAddress,
        ex:ValidAddress .

ex:PersonShape a sh:NodeShape ;
    rdfs:label "Person shape" ;
    sh:property [ sh:path ex:address ;
            sh:property ex:PersonShape-address-city ] ;
    sh:targetClass ex:Person .

ex:ValidPerson1 a ex:Person ;
    ex:address ex:ValidAddress .

ex:ProperCity a ex:City ;
    rdfs:label "Proper city" .

<urn:property-001> a sht:Validate ;
    rdfs:label "Test of sh:property at property shape 001" ;
    mf:action [ sht:dataGraph <urn:property-001.ttl> ;
            sht:shapesGraph <urn:property-001.ttl> ] ;
    mf:result [ a sh:ValidationReport ;
            sh:conforms false ;
            sh:result [ a sh:ValidationResult ;
                    sh:focusNode ex:InvalidAddress ;
                    sh:resultPath ex:city ;
                    sh:resultSeverity sh:Violation ;
                    sh:sourceConstraintComponent sh:ClassConstraintComponent ;
                    sh:sourceShape ex:PersonShape-address-city ;
                    sh:value ex:InvalidCity ],
                [ a sh:ValidationResult ;
                    sh:focusNode ex:InvalidAddress ;
                    sh:resultPath ex:city ;
                    sh:resultSeverity sh:Violation ;
                    sh:sourceConstraintComponent sh:ClassConstraintComponent ;
                    sh:sourceShape ex:PersonShape-address-city ;
                    sh:value ex:InvalidCity ] ] ;
    mf:status sht:approved .

ex:ValidAddress a ex:Address ;
    ex:city ex:ProperCity .

<urn:property-001.ttl> a mf:Manifest ;
    mf:entries ( <urn:property-001> ) .

ex:PersonShape-address-city sh:class ex:City ;
    sh:path ex:city .

ex:InvalidAddress a ex:Address ;
    ex:city ex:InvalidCity .

