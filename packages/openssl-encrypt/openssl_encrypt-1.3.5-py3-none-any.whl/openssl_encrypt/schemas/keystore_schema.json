{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://opensslencrypt.com/schemas/keystore.json",
  "title": "OpenSSL Encrypt Keystore Schema",
  "description": "Schema for validating OpenSSL Encrypt keystore files",
  "type": "object",
  "required": ["version", "keys"],
  "additionalProperties": true,
  "properties": {
    "version": {
      "oneOf": [
        {
          "type": "string",
          "pattern": "^[0-9]+\\.[0-9]+$"
        },
        {
          "type": "integer",
          "minimum": 1,
          "maximum": 100
        }
      ],
      "description": "Keystore format version (string or integer)"
    },
    "keys": {
      "type": "object",
      "maxProperties": 1000,
      "patternProperties": {
        "^[a-zA-Z0-9_-]{1,64}$": {
          "type": "object",
          "required": [],
          "additionalProperties": true,
          "properties": {
            "algorithm": {
              "type": "string",
              "enum": [
                "fernet",
                "aes-gcm",
                "aes-gcm-siv",
                "aes-ocb3",
                "aes-siv",
                "chacha20-poly1305",
                "xchacha20-poly1305",
                "ml-kem-768",
                "ml-kem-1024",
                "ML-KEM-768",
                "ML-KEM-1024",
                "rsa-2048",
                "rsa-4096",
                "ed25519",
                "Kyber768",
                "Kyber1024",
                "kyber768",
                "kyber1024",
                "dilithium3",
                "Dilithium3",
                "hqc-256",
                "HQC-256"
              ],
              "description": "Cryptographic algorithm for this key"
            },
            "key_data": {
              "type": "string",
              "maxLength": 65536,
              "pattern": "^[A-Za-z0-9+/]+=*$",
              "description": "Base64-encoded key material (max 64KB for PQC keys)"
            },
            "key_type": {
              "type": "string",
              "enum": ["symmetric", "public", "private", "pqc-public", "pqc-private"],
              "description": "Type of cryptographic key"
            },
            "created_at": {
              "type": "string",
              "format": "date-time",
              "description": "ISO 8601 timestamp of key creation"
            },
            "expires_at": {
              "type": "string",
              "format": "date-time",
              "description": "ISO 8601 timestamp of key expiration (optional)"
            },
            "description": {
              "type": "string",
              "maxLength": 256,
              "description": "Human-readable key description"
            },
            "tags": {
              "type": "array",
              "maxItems": 20,
              "items": {
                "type": "string",
                "maxLength": 32,
                "pattern": "^[a-zA-Z0-9_-]+$"
              },
              "description": "Optional tags for key organization"
            }
          }
        }
      },
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "created_at": {
          "type": "string",
          "format": "date-time",
          "description": "Keystore creation timestamp"
        },
        "modified_at": {
          "type": "string",
          "format": "date-time",
          "description": "Last modification timestamp"
        },
        "description": {
          "type": "string",
          "maxLength": 512,
          "description": "Keystore description"
        },
        "creator": {
          "type": "string",
          "maxLength": 128,
          "description": "Keystore creator identifier"
        }
      }
    }
  }
}
