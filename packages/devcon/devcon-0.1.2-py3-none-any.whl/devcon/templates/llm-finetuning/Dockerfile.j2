FROM mcr.microsoft.com/devcontainers/python:{{ python_version | default('3.11') }}

# Install system dependencies first
RUN apt-get update && apt-get install -y \
    zsh \
    git \
    fonts-powerline \
    build-essential \
    {% if gpu %}nvidia-cuda-toolkit \
    {% endif %}libhdf5-dev && \
    apt-get clean && rm -rf /var/lib/apt/lists/*

# Install Node.js (required for Claude Code)
RUN curl -fsSL https://deb.nodesource.com/setup_{{ node_version | default('20') }}.x | bash - && \
    apt-get install -y nodejs && \
    apt-get clean && rm -rf /var/lib/apt/lists/*

# Install Claude Code
RUN npm install -g @anthropic-ai/claude-code{% if claude_version and claude_version != 'latest' %}@{{ claude_version }}{% endif %}

# Install PyTorch and LLM finetuning packages
RUN pip install --no-cache-dir \
    {% if gpu %}torch torchvision torchaudio --index-url https://download.pytorch.org/whl/cu118 \
    {% else %}torch torchvision torchaudio \
    {% endif %}transformers \
    datasets \
    accelerate \
    peft \
    bitsandbytes \
    wandb \
    tensorboard \
    jupyter \
    jupyterlab

# Switch to vscode user for Oh My Zsh installation
USER vscode

# Install Oh My Zsh for vscode user
RUN sh -c "$(curl -fsSL https://raw.githubusercontent.com/ohmyzsh/ohmyzsh/master/tools/install.sh)" "" --unattended

# Install Powerlevel10k theme
RUN git clone --depth=1 https://github.com/romkatv/powerlevel10k.git \
    /home/vscode/.oh-my-zsh/custom/themes/powerlevel10k

# Install zsh plugins
RUN git clone https://github.com/zsh-users/zsh-autosuggestions \
    /home/vscode/.oh-my-zsh/custom/plugins/zsh-autosuggestions && \
    git clone https://github.com/zsh-users/zsh-syntax-highlighting \
    /home/vscode/.oh-my-zsh/custom/plugins/zsh-syntax-highlighting

# Configure zsh
RUN echo 'export ZSH="$HOME/.oh-my-zsh"' > ~/.zshrc && \
    echo 'ZSH_THEME="powerlevel10k/powerlevel10k"' >> ~/.zshrc && \
    echo 'plugins=(git zsh-autosuggestions zsh-syntax-highlighting python)' >> ~/.zshrc && \
    echo 'source $ZSH/oh-my-zsh.sh' >> ~/.zshrc && \
    echo 'POWERLEVEL9K_DISABLE_CONFIGURATION_WIZARD=true' >> ~/.zshrc

# Copy p10k configuration
COPY --chown=vscode:vscode .p10k.zsh /home/vscode/.p10k.zsh
RUN echo '[[ ! -f ~/.p10k.zsh ]] || source ~/.p10k.zsh' >> ~/.zshrc

WORKDIR /workspace
