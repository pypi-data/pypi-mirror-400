# nxt_style.mplstyle
# -------------------
# Fonts
axes.labelsize : 14
xtick.labelsize : 12
ytick.labelsize : 12
legend.fontsize : 12

# Tick direction
xtick.direction : in
ytick.direction : in

# Grid
axes.grid : True
grid.linestyle : --
grid.alpha : 0.7

# Figure appearance
figure.facecolor : white
lines.linewidth : 1.5

# Color cycle
# nxt_blue, wild_strawberry, dandelion, green, black
axes.prop_cycle : cycler('color', ["#13ADB5", "#FF2967", "#f0c800", "#009B55", "black"])