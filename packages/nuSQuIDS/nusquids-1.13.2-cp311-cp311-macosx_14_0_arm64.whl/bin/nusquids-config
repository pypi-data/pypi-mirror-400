#!/bin/bash
# nuSQuIDS configuration script
# Generated by configure

prefix="/Users/runner/work/nuSQuIDS/nuSQuIDS"
libdir="${prefix}/lib"
includedir="${prefix}/include"
version="1.13.2"

# Dependency flags (resolved at configure time)
SQUIDS_CFLAGS="-I/var/folders/sm/xrr7tmqj20s7hrsh1qhfl1d40000gn/T/tmpwh_aer2x/build/_deps/squids/install/include"
SQUIDS_LDFLAGS="-L/var/folders/sm/xrr7tmqj20s7hrsh1qhfl1d40000gn/T/tmpwh_aer2x/build/_deps/squids/install/lib -lSQuIDS"
GSL_CFLAGS="-I/opt/homebrew/Cellar/gsl/2.8/include"
GSL_LDFLAGS="-L/opt/homebrew/Cellar/gsl/2.8/lib -lgsl -lgslcblas -lm"
HDF5_CFLAGS="-I/opt/homebrew/include"
HDF5_LDFLAGS="-L/opt/homebrew/lib -lhdf5 -lhdf5_hl"

usage() {
    cat <<EOF
Usage: nusquids-config [OPTIONS]
Options:
  --prefix       Print installation prefix
  --incdir       Print include directory
  --libdir       Print library directory
  --cflags       Print compiler flags (includes dependencies)
  --libs         Print linker flags (includes dependencies)
  --version      Print nuSQuIDS version
  --help         Print this message
EOF
    exit $1
}

if [ $# -eq 0 ]; then
    usage 1
fi

while [ $# -gt 0 ]; do
    case "$1" in
        --prefix)
            echo "$prefix"
            ;;
        --incdir)
            echo "$includedir"
            ;;
        --libdir)
            echo "$libdir"
            ;;
        --cflags)
            echo "-I${includedir} ${SQUIDS_CFLAGS} ${GSL_CFLAGS} ${HDF5_CFLAGS}"
            ;;
        --libs)
            echo "-L${libdir} -lnuSQuIDS ${SQUIDS_LDFLAGS} ${GSL_LDFLAGS} ${HDF5_LDFLAGS}"
            ;;
        --version)
            echo "$version"
            ;;
        --help)
            usage 0
            ;;
        *)
            echo "Unknown option: $1" 1>&2
            usage 1
            ;;
    esac
    shift
done
