# MANIFEST.in for isage-apps
# 
# This file specifies additional files to include in the source distribution

# Include all documentation files
include README.md
include LICENSE

# Include all configuration and data files
recursive-include src/sage/apps *.yaml *.yml *.json *.txt *.md
recursive-include src/sage/apps/*/data *
recursive-include src/sage/apps/*/config *

# Include type hints
include src/sage/apps/py.typed

# Exclude unwanted files
global-exclude *.pyc
global-exclude *.pyo
global-exclude __pycache__
global-exclude .DS_Store
global-exclude *.so
global-exclude .git*

# Exclude tests
prune tests
