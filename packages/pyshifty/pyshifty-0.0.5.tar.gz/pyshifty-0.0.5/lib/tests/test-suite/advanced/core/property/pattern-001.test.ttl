@prefix ex: <http://datashapes.org/sh/tests/core/property/pattern-001.test#> .
@prefix mf: <http://www.w3.org/2001/sw/DataAccess/tests/test-manifest#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix sht: <http://www.w3.org/ns/shacl-test#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

@base <urn:shacl-advanced-core:> .
ex:TestShape a rdfs:Class,
        sh:NodeShape ;
    rdfs:label "Test shape" ;
    sh:property ex:TestShape-property .

ex:ValidInstance1 a ex:TestShape ;
    rdfs:label "Valid instance1" ;
    ex:property "Hi Joh",
        "John" .

<pattern-001> a sht:Validate ;
    rdfs:label "Test of sh:pattern at property shape 001" ;
    mf:action [ sht:dataGraph <pattern-001.test.ttl> ;
            sht:shapesGraph <pattern-001.test.ttl> ] ;
    mf:result [ a sh:ValidationReport ;
            sh:conforms false ;
            sh:result [ a sh:ValidationResult ;
                    sh:focusNode ex:InvalidInstance1 ;
                    sh:resultPath ex:property ;
                    sh:resultSeverity sh:Violation ;
                    sh:sourceConstraintComponent sh:PatternConstraintComponent ;
                    sh:sourceShape ex:TestShape-property ;
                    sh:value "Maria" ],
                [ a sh:ValidationResult ;
                    sh:focusNode ex:InvalidInstance2 ;
                    sh:resultPath ex:property ;
                    sh:resultSeverity sh:Violation ;
                    sh:sourceConstraintComponent sh:PatternConstraintComponent ;
                    sh:sourceShape ex:TestShape-property ;
                    sh:value "john" ] ] ;
    mf:status sht:approved .

ex:InvalidInstance1 a ex:TestShape ;
    rdfs:label "Invalid instance1" ;
    ex:property "Maria" .

ex:InvalidInstance2 a ex:TestShape ;
    rdfs:label "Invalid instance2" ;
    ex:property "john" .

<pattern-001.test.ttl> a mf:Manifest ;
    mf:entries ( <pattern-001> ) .

ex:TestShape-property sh:datatype xsd:string ;
    sh:path ex:property ;
    sh:pattern "Joh" .
