# Include essential files
include README.md
include LICENSE
include CHANGELOG.md
include requirements.txt

# Include package data
recursive-include lorenz_phase_space *.py

# Include sample data
recursive-include samples *.csv

# Exclude documentation (available on GitHub)
exclude docs/*
exclude tests/*

# Exclude development and build artifacts
exclude .circleci/*
exclude .gitignore
exclude Pipfile
exclude Pipfile.lock
global-exclude __pycache__
global-exclude *.py[cod]
global-exclude *~
global-exclude .DS_Store
