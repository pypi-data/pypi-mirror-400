# Essential files for package distribution
include README.md
include LICENSE
include requirements.txt
include pyproject.toml

# Include all Python files in the package
recursive-include vortex_datalayer *.py

# Include SQL files (stored procedures, DDL)
recursive-include vortex_datalayer *.sql

# Include package data files
recursive-include vortex_datalayer *.txt
recursive-include vortex_datalayer *.md
recursive-include vortex_datalayer *.yml
recursive-include vortex_datalayer *.yaml
recursive-include vortex_datalayer *.json

# Exclude development and build artifacts
global-exclude *.pyc
global-exclude *.pyo
global-exclude __pycache__
global-exclude .DS_Store
global-exclude .git*
global-exclude .coverage
global-exclude .pytest_cache
global-exclude .mypy_cache
global-exclude .tox
global-exclude .venv
global-exclude venv
global-exclude env
global-exclude .env
global-exclude *.egg-info
global-exclude build
global-exclude dist
global-exclude .eggs
global-exclude *.log
global-exclude *.tmp
global-exclude *.bak
global-exclude *.swp
global-exclude *.swo
global-exclude *~
global-exclude .vscode
global-exclude .idea
global-exclude *.sublime-*
