    "version": "0.2.0",
    "configurations": [
        {
            "name": "dev: api",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "run.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--debugger",
                "--reload",
                "--port",
                "5001"
            ],
            "jinja": true,
            "autoStartBrowser": false
        },
        {
            "name": "dev: frontend",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "pnpm",
            "runtimeArgs": [
                "dev",
                "--port",
                "5163"
            ],
            "cwd": "${workspaceFolder}/frontend",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}