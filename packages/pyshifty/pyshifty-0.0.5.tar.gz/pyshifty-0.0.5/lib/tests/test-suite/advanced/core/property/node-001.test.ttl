@prefix ex: <http://datashapes.org/sh/tests/core/property/node-001.test#> .
@prefix mf: <http://www.w3.org/2001/sw/DataAccess/tests/test-manifest#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix sht: <http://www.w3.org/ns/shacl-test#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

@base <urn:shacl-advanced-core:> .
ex:Issue a rdfs:Class,
        sh:NodeShape ;
    rdfs:label "Issue" ;
    rdfs:subClassOf rdfs:Resource ;
    sh:property ex:Issue-assignedTo,
        ex:Issue-submittedBy .

ex:Person a rdfs:Class,
        sh:NodeShape ;
    rdfs:label "Person" ;
    rdfs:subClassOf rdfs:Resource ;
    sh:property [ rdfs:label "email" ;
            ex:datatype xsd:string ;
            sh:path ex:email ],
        [ rdfs:label "first name" ;
            sh:datatype xsd:string ;
            sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:path ex:firstName ],
        [ rdfs:label "last name" ;
            sh:datatype xsd:string ;
            sh:path ex:lastName ] .

ex:Issue_2 a ex:Issue ;
    rdfs:label "Issue 2" ;
    ex:assignedTo ex:JohnDoeWithEmail ;
    ex:submittedBy ex:Anon .

<node-001> a sht:Validate ;
    rdfs:label "Test of sh:node at property shape 001" ;
    mf:action [ sht:dataGraph <node-001.test.ttl> ;
            sht:shapesGraph <node-001.test.ttl> ] ;
    mf:result [ a sh:ValidationReport ;
            sh:conforms false ;
            sh:result [ a sh:ValidationResult ;
                    sh:focusNode ex:Issue_1 ;
                    sh:resultPath ex:assignedTo ;
                    sh:resultSeverity sh:Violation ;
                    sh:sourceConstraintComponent sh:NodeConstraintComponent ;
                    sh:sourceShape ex:Issue-assignedTo ;
                    sh:value ex:Anon ] ] ;
    mf:status sht:approved .

ex:Issue-submittedBy sh:class ex:Person ;
    sh:minCount 1 ;
    sh:path ex:submittedBy .

ex:Issue_1 a ex:Issue ;
    rdfs:label "Issue 1" ;
    ex:assignedTo ex:Anon ;
    ex:submittedBy ex:Anon .

ex:JohnDoeWithEmail a ex:Person ;
    ex:email "john@doe.com" ;
    ex:firstName "John" ;
    ex:lastName "Doe" .

<node-001.test.ttl> a mf:Manifest ;
    mf:entries ( <node-001> ) .

ex:Issue-assignedTo sh:class ex:Person ;
    sh:node [ rdfs:comment "All assignees must have an email and a last name." ;
            sh:property [ sh:maxCount 1 ;
                    sh:minCount 1 ;
                    sh:path ex:email ],
                [ sh:maxCount 1 ;
                    sh:minCount 1 ;
                    sh:path ex:lastName ] ] ;
    sh:path ex:assignedTo .

ex:Anon a ex:Person ;
    ex:firstName "Anon" .
