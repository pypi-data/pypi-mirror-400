# -*- coding: utf-8; -*-
"""
server CLI
"""

import typer

from wuttjamaican.cli import make_typer


server_typer = make_typer(name="server", help="server -- My web app")


@server_typer.command()
def install(
    ctx: typer.Context,
):
    """
    Install the server app
    """
    config = ctx.parent.wutta_config
    app = config.get_app()
    install = app.get_install_handler(
        pkg_name="server", app_title="server", pypi_name="server", egg_name="server"
    )
    install.run()
