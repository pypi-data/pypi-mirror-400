@prefix ex: <http://datashapes.org/sh/tests/core/property/qualifiedValueShapesDisjoint-001.test#> .
@prefix mf: <http://www.w3.org/2001/sw/DataAccess/tests/test-manifest#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix sht: <http://www.w3.org/ns/shacl-test#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

@base <urn:shacl-advanced-core:> .
ex:Finger a rdfs:Class,
        sh:NodeShape ;
    rdfs:label "Finger" ;
    rdfs:subClassOf rdfs:Resource .

ex:Hand a rdfs:Class,
        sh:NodeShape ;
    rdfs:label "Hand" ;
    rdfs:subClassOf rdfs:Resource .

ex:Thumb a rdfs:Class,
        sh:NodeShape ;
    rdfs:label "Thumb" ;
    rdfs:subClassOf rdfs:Resource .

ex:HandShape a sh:NodeShape ;
    sh:property ex:HandShape-digit1,
        ex:HandShape-digit4 ;
    sh:targetClass ex:Hand .

ex:ValidHand a ex:Hand ;
    rdfs:label "Valid hand" ;
    ex:digit ex:Finger1,
        ex:Finger2,
        ex:Finger3,
        ex:Finger4,
        ex:Thumb1 .

<qualifiedValueShapesDisjoint-001> a sht:Validate ;
    rdfs:label "Test of sh:qualifiedValueShapesDisjoint at property shape 001" ;
    mf:action [ sht:dataGraph <qualifiedValueShapesDisjoint-001.test.ttl> ;
            sht:shapesGraph <qualifiedValueShapesDisjoint-001.test.ttl> ] ;
    mf:result [ a sh:ValidationReport ;
            sh:conforms false ;
            sh:result [ a sh:ValidationResult ;
                    sh:focusNode ex:InvalidHand1 ;
                    sh:resultPath ex:digit ;
                    sh:resultSeverity sh:Violation ;
                    sh:sourceConstraintComponent sh:QualifiedMinCountConstraintComponent ;
                    sh:sourceShape ex:HandShape-digit1 ],
                [ a sh:ValidationResult ;
                    sh:focusNode ex:InvalidHand1 ;
                    sh:resultPath ex:digit ;
                    sh:resultSeverity sh:Violation ;
                    sh:sourceConstraintComponent sh:QualifiedMinCountConstraintComponent ;
                    sh:sourceShape ex:HandShape-digit4 ] ] ;
    mf:status sht:approved .

ex:Finger4 a ex:Finger ;
    rdfs:label "Finger4" .

ex:FingerAndThumb a ex:Finger,
        ex:Thumb ;
    rdfs:label "Finger and thumb" .

ex:Thumb1 a ex:Thumb ;
    rdfs:label "Thumb1" .

<qualifiedValueShapesDisjoint-001.test.ttl> a mf:Manifest ;
    mf:entries ( <qualifiedValueShapesDisjoint-001> ) .

ex:Finger1 a ex:Finger ;
    rdfs:label "Finger1" .

ex:Finger2 a ex:Finger ;
    rdfs:label "Finger2" .

ex:Finger3 a ex:Finger ;
    rdfs:label "Finger3" .

ex:HandShape-digit1 sh:path ex:digit ;
    sh:qualifiedMaxCount 1 ;
    sh:qualifiedMinCount 1 ;
    sh:qualifiedValueShape [ sh:class ex:Thumb ] ;
    sh:qualifiedValueShapesDisjoint true .

ex:HandShape-digit4 sh:path ex:digit ;
    sh:qualifiedMaxCount 4 ;
    sh:qualifiedMinCount 4 ;
    sh:qualifiedValueShape [ sh:class ex:Finger ] ;
    sh:qualifiedValueShapesDisjoint true .

ex:InvalidHand1 a ex:Hand ;
    ex:digit ex:Finger1,
        ex:Finger2,
        ex:Finger3,
        ex:FingerAndThumb .
