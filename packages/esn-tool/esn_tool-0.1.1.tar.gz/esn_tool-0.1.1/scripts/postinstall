#!/bin/bash
#
# ESN Tool 安装后脚本
# 此脚本在 pkg 安装完成后自动执行

set -e

echo ""
echo "════════════════════════════════════════════════════════"
echo "  ESN Tool 安装成功! ✅"
echo "════════════════════════════════════════════════════════"
echo ""
echo "安装位置: /usr/local/bin/esn"
echo ""
echo "快速开始:"
echo "  1. 配置 AI: esn config"
echo "  2. 初始化项目: esn init -s"
echo "  3. 查看帮助: esn --help"
echo ""
echo "卸载方式:"
echo "  sudo /usr/local/share/esn/uninstall.sh"
echo ""
echo "════════════════════════════════════════════════════════"
echo ""

# 验证安装
if [ -f "/usr/local/bin/esn" ]; then
    echo "✅ 验证成功: esn 已正确安装"
    # 确保有执行权限
    chmod +x /usr/local/bin/esn
else
    echo "❌ 警告: 未找到 esn"
    exit 1
fi

exit 0
