        {
            "name": "chroma",
            "label": "ChromaDB 配置",
            "type": "json",
            "required": true,
            "defaultValue": "{\"persistence_path\": \"~/.sage/vector_db\", \"collection_name\": \"sage_kb\", \"knowledge_file\": null}",
