# TAXII Test Server Configuration
# Copy this file to .env and customize as needed

# Server Configuration
TAXII_SERVER_TITLE=Test TAXII Server
TAXII_SERVER_DESCRIPTION=A test TAXII server supporting both 2.0 and 2.1
TAXII_SERVER_CONTACT=admin@example.com

# Default User Passwords
# Change these for production use!
TAXII_TEST_USER_PASSWORD=test_password
TAXII_READONLY_USER_PASSWORD=readonly_password
TAXII_ADMIN_PASSWORD=admin_password
TAXII_API_USER_PASSWORD=api_key_12345

# Authentication Settings
# Allow anonymous read access to collections
TAXII_ALLOW_ANONYMOUS_READ=false

# Require authentication for discovery endpoint
TAXII_REQUIRE_AUTH_FOR_DISCOVERY=false

# Database Configuration
# DATABASE_URL=sqlite:///./taxii_test.db
# DATABASE_URL=postgresql://user:password@localhost/taxii_db

# API Root URLs (update if running on different host/port)
TAXII_API_ROOT_20=http://localhost:8000/taxii2/api1/
TAXII_API_ROOT_21=http://localhost:8000/taxii21/api1/