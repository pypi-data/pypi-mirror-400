define component CentraleRouterBediensystemen
  parameters
    # Statussignaal
    statussignaal_OBJ-PBN is a statussignaal
    gealloceerd_statussignaal_OBJ-PBN is a statussignaal

    # Statussignaal
    bediensignaal_CBP is a bediensignaal
    bediensignaal_NBC is a bediensignaal

    objectbedienmodus is an bedienmodi-enumeratie
    operationele-status is a operationele-status-enumeratie property

  transformation-requirement
    CRB-omzetten-statussignaal-01: must omzetten statussignaal_OBJ-PBN in gealloceerd_statussignaal_OBJ-PBN

    CRB-omzetten-bediensignaal-01: must omzetten bediensignaal_CBP in bediensignaal_NBC

  behavior-requirement
    CRB-operationele-status:
      case CRB-is-actief:
        when
          * c1: objectbedienmodus is equal to bediening-op-afstand [-]
        then
          * r1: operationele-status must be equal to actief [-]
      case CRB-is-passief:
      when
          * c2: objectbedienmodus is equal to bediening-lokaal-nood [-] or objectbedienmodus is equal to bediening-lokaal-regulier-of-onderhoud [-]
        then
          * r2: operationele-status must be equal to passief [-]
