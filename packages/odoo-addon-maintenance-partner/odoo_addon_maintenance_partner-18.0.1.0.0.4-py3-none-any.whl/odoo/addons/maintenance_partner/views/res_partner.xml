<odoo>
    <record model="ir.ui.view" id="res_partner_form_view">
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button
                    name="%(maintenance_partner.action_maintenance_equipment_from_partner)s"
                    icon="fa-cube"
                    type="action"
                    class="oe_highlight"
                    invisible="equipment_count == 0"
                >
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value">
                            <field name="equipment_count" />
                        </span>
                        <span class="o_stat_text">Equipments</span>
                    </div>
                </button>
                <button
                    name="%(maintenance_partner.action_maintenance_request_from_partner)s"
                    icon="fa-wrench"
                    type="action"
                    class="oe_highlight"
                    invisible="maintenance_request_count == 0"
                >
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value">
                            <field name="maintenance_request_count" />
                        </span>
                        <span class="o_stat_text">Maintenances</span>
                    </div>
                </button>
            </div>
        </field>
    </record>
</odoo>
