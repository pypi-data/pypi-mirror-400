@prefix dash: <http://datashapes.org/dash#> .
@prefix ex: <http://datashapes.org/sh/tests/sparql/target/sparqlTarget-001.test#> .
@prefix mf: <http://www.w3.org/2001/sw/DataAccess/tests/test-manifest#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix sht: <http://www.w3.org/ns/shacl-test#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

@base <urn:shacl-advanced-target:> .

ex:GraphValidationTestCase a dash:GraphValidationTestCase ;
    dash:expectedResult [ a sh:ValidationReport ;
            sh:conforms false ;
            sh:result [ a sh:ValidationResult ;
                    sh:focusNode ex:InvalidInstance1 ;
                    sh:resultPath rdfs:label ;
                    sh:resultSeverity sh:Violation ;
                    sh:sourceConstraintComponent sh:MaxCountConstraintComponent ;
                    sh:sourceShape ex:TestShape-label ] ] .

ex:TestShape a sh:NodeShape ;
    rdfs:label "Test shape" ;
    sh:property ex:TestShape-label ;
    sh:target [ a sh:SPARQLTarget ;
            sh:prefixes <http://datashapes.org/sh/tests/sparql/target/sparqlTarget-001.test> ;
            sh:select """
PREFIX owl: <http://www.w3.org/2002/07/owl#>
SELECT ?this
WHERE {
    ?this a owl:Thing .
}""" ] .

ex:ValidInstance1 a owl:Thing .

<sparqlTarget-001> a sht:Validate ;
    rdfs:label "Test of sh:SPARQLTarget 001" ;
    mf:action [ sht:dataGraph <sparqlTarget-001.test.ttl> ;
            sht:shapesGraph <sparqlTarget-001.test.ttl> ] ;
    mf:result [ a sh:ValidationReport ;
            sh:conforms false ;
            sh:result [ a sh:ValidationResult ;
                    sh:focusNode ex:InvalidInstance1 ;
                    sh:resultPath rdfs:label ;
                    sh:resultSeverity sh:Violation ;
                    sh:sourceConstraintComponent sh:MaxCountConstraintComponent ;
                    sh:sourceShape ex:TestShape-label ] ] ;
    mf:status sht:proposed .

<http://datashapes.org/sh/tests/sparql/target/sparqlTarget-001.test> a owl:Ontology ;
    rdfs:label "Test of sh:SPARQLTarget 001" ;
    owl:imports <http://datashapes.org/dash> .

<sparqlTarget-001.test.ttl> a mf:Manifest ;
    mf:entries ( <sparqlTarget-001> ) .

ex:InvalidInstance1 a owl:Thing ;
    rdfs:label "Invalid instance1" .

ex:TestShape-label rdfs:label "label" ;
    rdfs:comment "Must not have any rdfs:label" ;
    sh:datatype xsd:string ;
    sh:maxCount 0 ;
    sh:path rdfs:label .
