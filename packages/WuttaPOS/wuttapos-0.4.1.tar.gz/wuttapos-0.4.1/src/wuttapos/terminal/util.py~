"""
WuttaPOS utilities
"""

import flet as ft


def show_snackbar(page, text, bgcolor='yellow'):
    snack_bar = ft.SnackBar(ft.Text(text, color='black',
                                    size=40,
                                    weight=ft.FontWeight.BOLD),
                            bgcolor=bgcolor,
                            duration=1500)
    page.overlay.append(snack_bar)
    snack_bar.open = True
