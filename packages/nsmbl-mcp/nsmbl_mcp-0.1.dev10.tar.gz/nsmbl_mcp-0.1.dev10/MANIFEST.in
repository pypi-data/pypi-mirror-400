# Include important documentation and configuration files
include README.md
include LICENSE
include .env.example

# Include all markdown files in the root and examples
include *.md
recursive-include examples *.md

# Include context directory for reference
recursive-include context *.py

# Exclude test files
recursive-exclude tests *
recursive-exclude * __pycache__
recursive-exclude * *.py[co]

# Exclude development and build artifacts
exclude .gitignore
exclude .env
exclude pyproject.toml.bak
recursive-exclude * .DS_Store
prune .github
prune dist
prune build
prune *.egg-info

