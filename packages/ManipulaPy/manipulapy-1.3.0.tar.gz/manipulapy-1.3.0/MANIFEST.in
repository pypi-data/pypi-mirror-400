# Include the README and license files
include README.md
include LICENSE
include CHANGELOG.md
include CODE_OF_CONDUCT.md
include STATUS.md

# Include all Python files in the main package
recursive-include ManipulaPy *.py

# Include URDF files only (NOT mesh files - too large for PyPI)
recursive-include ManipulaPy/ManipulaPy_data *.urdf
recursive-include ManipulaPy/ManipulaPy_data *.md
recursive-include ManipulaPy/ManipulaPy_data *.yaml
recursive-include ManipulaPy/ManipulaPy_data *.json

# Include configuration files
recursive-include ManipulaPy *.yaml *.json *.xml *.cfg *.ini

# Include tests
recursive-include tests *.py

# ============================================================
# EXCLUDE large files to keep package under PyPI size limits
# ============================================================

# Exclude mesh files (users can download separately if needed)
global-exclude *.stl
global-exclude *.dae
global-exclude *.obj
global-exclude *.mesh

# Exclude _source directory (xacro development files)
recursive-exclude ManipulaPy/ManipulaPy_data/_source *

# Exclude unwanted files
global-exclude *.pyc
global-exclude *.pyo
global-exclude *~
global-exclude *.tmp
global-exclude .DS_Store
global-exclude __pycache__
recursive-exclude * __pycache__
recursive-exclude * *.py[co]

# Exclude development files
exclude .gitignore
exclude .pre-commit-config.yaml
exclude tox.ini
exclude .travis.yml
exclude .github

# Exclude docs and examples from package (available on GitHub)
recursive-exclude docs *
recursive-exclude Examples *
recursive-exclude Benchmark *
