@prefix dash: <http://datashapes.org/dash#> .
@prefix ex: <http://datashapes.org/shasf/tests/rules/triple/functions-permutations.test#> .
@prefix mf: <http://www.w3.org/2001/sw/DataAccess/tests/test-manifest#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

ex:TestShapeClass a rdfs:Class,
        sh:NodeShape ;
    rdfs:label "Test shape class" ;
    rdfs:subClassOf rdfs:Resource ;
    sh:rule [ a sh:TripleRule ;
            sh:object [ ex:testFunction ( [ sh:path ex:p1 ] [ sh:path ex:p2 ] [ sh:path ex:p3 ] ) ] ;
            sh:predicate ex:target ;
            sh:subject sh:this ] .

<functions-permutations.test.ttl> a mf:Manifest ;
    mf:entries ( ex:InferencingTestCase ) .

<http://datashapes.org/shasf/tests/rules/triple/functions-permutations.test> a owl:Ontology ;
    rdfs:label "Test of functions-permutations" ;
    owl:imports <http://datashapes.org/dash> ;
    owl:versionInfo "Created with TopBraid Composer" .

ex:testFunction a sh:SPARQLFunction ;
    sh:parameter [ sh:path ex:arg1 ],
        [ sh:path ex:arg2 ],
        [ sh:path ex:arg3 ] ;
    sh:returnType xsd:string ;
    sh:select """
	SELECT ?result
	WHERE {
		BIND (CONCAT($arg1, $arg2, $arg3) AS ?result) .
	} """ .

ex:InferencingTestCase a dash:InferencingTestCase ;
    dash:expectedResult [ rdf:object "1a 2a 3a " ;
            rdf:predicate ex:target ;
            rdf:subject ex:TestInstance ],
        [ rdf:object "1a 2a 3b " ;
            rdf:predicate ex:target ;
            rdf:subject ex:TestInstance ],
        [ rdf:object "1a 2a 3c " ;
            rdf:predicate ex:target ;
            rdf:subject ex:TestInstance ],
        [ rdf:object "1b 2a 3a " ;
            rdf:predicate ex:target ;
            rdf:subject ex:TestInstance ],
        [ rdf:object "1b 2a 3b " ;
            rdf:predicate ex:target ;
            rdf:subject ex:TestInstance ],
        [ rdf:object "1b 2a 3c " ;
            rdf:predicate ex:target ;
            rdf:subject ex:TestInstance ] .

ex:p1 a rdf:Property ;
    rdfs:label "p1" ;
    rdfs:domain ex:TestShapeClass ;
    rdfs:range xsd:string .

ex:p2 a rdf:Property ;
    rdfs:label "p2" ;
    rdfs:domain ex:TestShapeClass ;
    rdfs:range xsd:string .

ex:p3 a rdf:Property ;
    rdfs:label "p3" ;
    rdfs:domain ex:TestShapeClass ;
    rdfs:range xsd:string .

ex:TestInstance a ex:TestShapeClass ;
    rdfs:label "Test instance" ;
    ex:p1 "1a ",
        "1b " ;
    ex:p2 "2a " ;
    ex:p3 "3a ",
        "3b ",
        "3c " .

