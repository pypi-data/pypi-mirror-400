# Include metadata files
include README.md
include LICENSE
include CHANGELOG.md
include pyproject.toml

# Include only essential Swiss Ephemeris data files (covers 1800-2400 CE, ~3.7MB)
# Additional ephemeris data can be downloaded via CLI: stellium ephemeris download
include data/README.md
include data/swisseph/ephe/sepl_18.se1
include data/swisseph/ephe/sepl_24.se1
include data/swisseph/ephe/semo_18.se1
include data/swisseph/ephe/semo_24.se1
include data/swisseph/ephe/seas_18.se1
include data/swisseph/ephe/seas_24.se1

# Include notable births/events data if present
recursive-include data/notables *.yaml *.yml

# Exclude unnecessary files
global-exclude __pycache__
global-exclude *.py[cod]
global-exclude .DS_Store
global-exclude *.so
