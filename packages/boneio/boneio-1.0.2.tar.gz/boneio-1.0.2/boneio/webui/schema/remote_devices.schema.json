{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "remote_devices": {
      "type": [
        "array",
        "string"
      ],
      "items": {
        "type": [
          "object",
          "string"
        ],
        "properties": {
          "id": {
            "type": "string",
            "description": "Device ID",
            "title": "Id"
          },
          "name": {
            "type": "string",
            "description": "Device Name",
            "title": "Name"
          },
          "protocol": {
            "type": "string",
            "enum": [
              "mqtt",
              "esphome_api"
            ],
            "examples": [
              "mqtt"
            ],
            "description": "Protocol",
            "title": "Protocol"
          },
          "device_type": {
            "type": "string",
            "default": "boneio_black",
            "enum": [
              "boneio_black",
              "esphome",
              "generic"
            ],
            "examples": [
              "boneio_black"
            ],
            "description": "Device Type",
            "title": "Device type"
          },
          "mqtt": {
            "type": [
              "object",
              "string"
            ],
            "properties": {
              "outputs": {
                "type": [
                  "array",
                  "string"
                ],
                "items": {
                  "type": [
                    "object",
                    "string"
                  ],
                  "properties": {
                    "id": {
                      "type": "string",
                      "description": "Output ID",
                      "title": "Id"
                    },
                    "name": {
                      "type": "string",
                      "description": "Output Name (for UI)",
                      "title": "Name"
                    }
                  },
                  "required": [
                    "id"
                  ]
                },
                "description": "Available Outputs",
                "title": "Outputs"
              },
              "covers": {
                "type": [
                  "array",
                  "string"
                ],
                "items": {
                  "type": [
                    "object",
                    "string"
                  ],
                  "properties": {
                    "id": {
                      "type": "string",
                      "description": "Cover ID",
                      "title": "Id"
                    },
                    "name": {
                      "type": "string",
                      "description": "Cover Name (for UI)",
                      "title": "Name"
                    }
                  },
                  "required": [
                    "id"
                  ]
                },
                "description": "Available Covers",
                "title": "Covers"
              }
            },
            "description": "MQTT Protocol Settings",
            "title": "Mqtt",
            "x-dependencies": {
              "protocol": [
                "mqtt"
              ]
            }
          },
          "esphome_api": {
            "type": [
              "object",
              "string"
            ],
            "properties": {
              "host": {
                "type": "string",
                "description": "Host",
                "title": "Host"
              },
              "port": {
                "type": [
                  "string",
                  "integer"
                ],
                "default": 6053,
                "description": "Port",
                "title": "Port"
              },
              "password": {
                "type": "string",
                "description": "API Password",
                "title": "Password"
              },
              "encryption_key": {
                "type": "string",
                "description": "Encryption Key",
                "title": "Encryption key"
              },
              "switches": {
                "type": [
                  "array",
                  "string"
                ],
                "items": {
                  "type": [
                    "object",
                    "string"
                  ],
                  "properties": {
                    "id": {
                      "type": "string",
                      "description": "Switch ID (object_id)",
                      "title": "Id"
                    },
                    "name": {
                      "type": "string",
                      "description": "Switch Name",
                      "title": "Name"
                    },
                    "key": {
                      "type": [
                        "string",
                        "integer"
                      ],
                      "description": "Entity Key (from discovery)",
                      "title": "Key"
                    }
                  },
                  "required": [
                    "id"
                  ]
                },
                "description": "Available Switches",
                "title": "Switches"
              },
              "lights": {
                "type": [
                  "array",
                  "string"
                ],
                "items": {
                  "type": [
                    "object",
                    "string"
                  ],
                  "properties": {
                    "id": {
                      "type": "string",
                      "description": "Light ID (object_id)",
                      "title": "Id"
                    },
                    "name": {
                      "type": "string",
                      "description": "Light Name",
                      "title": "Name"
                    },
                    "key": {
                      "type": [
                        "string",
                        "integer"
                      ],
                      "description": "Entity Key (from discovery)",
                      "title": "Key"
                    },
                    "supports_brightness": {
                      "oneOf": [
                        {
                          "type": "boolean"
                        },
                        {
                          "type": "string",
                          "enum": [
                            "yes",
                            "no",
                            "true",
                            "false",
                            "on",
                            "off"
                          ],
                          "x-yaml-boolean": true
                        }
                      ],
                      "default": false,
                      "description": "Supports Brightness",
                      "title": "Supports brightness"
                    },
                    "supports_color_temp": {
                      "oneOf": [
                        {
                          "type": "boolean"
                        },
                        {
                          "type": "string",
                          "enum": [
                            "yes",
                            "no",
                            "true",
                            "false",
                            "on",
                            "off"
                          ],
                          "x-yaml-boolean": true
                        }
                      ],
                      "default": false,
                      "description": "Supports Color Temperature",
                      "title": "Supports color temp"
                    },
                    "supports_rgb": {
                      "oneOf": [
                        {
                          "type": "boolean"
                        },
                        {
                          "type": "string",
                          "enum": [
                            "yes",
                            "no",
                            "true",
                            "false",
                            "on",
                            "off"
                          ],
                          "x-yaml-boolean": true
                        }
                      ],
                      "default": false,
                      "description": "Supports RGB Color",
                      "title": "Supports rgb"
                    },
                    "supports_rgbw": {
                      "oneOf": [
                        {
                          "type": "boolean"
                        },
                        {
                          "type": "string",
                          "enum": [
                            "yes",
                            "no",
                            "true",
                            "false",
                            "on",
                            "off"
                          ],
                          "x-yaml-boolean": true
                        }
                      ],
                      "default": false,
                      "description": "Supports RGBW Color",
                      "title": "Supports rgbw"
                    },
                    "min_mireds": {
                      "type": [
                        "number",
                        "string"
                      ],
                      "description": "Min Color Temp (mireds)",
                      "title": "Min mireds"
                    },
                    "max_mireds": {
                      "type": [
                        "number",
                        "string"
                      ],
                      "description": "Max Color Temp (mireds)",
                      "title": "Max mireds"
                    }
                  },
                  "required": [
                    "id"
                  ]
                },
                "description": "Available Lights",
                "title": "Lights"
              },
              "covers": {
                "type": [
                  "array",
                  "string"
                ],
                "items": {
                  "type": [
                    "object",
                    "string"
                  ],
                  "properties": {
                    "id": {
                      "type": "string",
                      "description": "Cover ID (object_id)",
                      "title": "Id"
                    },
                    "name": {
                      "type": "string",
                      "description": "Cover Name",
                      "title": "Name"
                    },
                    "key": {
                      "type": [
                        "string",
                        "integer"
                      ],
                      "description": "Entity Key (from discovery)",
                      "title": "Key"
                    },
                    "supports_position": {
                      "oneOf": [
                        {
                          "type": "boolean"
                        },
                        {
                          "type": "string",
                          "enum": [
                            "yes",
                            "no",
                            "true",
                            "false",
                            "on",
                            "off"
                          ],
                          "x-yaml-boolean": true
                        }
                      ],
                      "default": false,
                      "description": "Supports Position",
                      "title": "Supports position"
                    },
                    "supports_tilt": {
                      "oneOf": [
                        {
                          "type": "boolean"
                        },
                        {
                          "type": "string",
                          "enum": [
                            "yes",
                            "no",
                            "true",
                            "false",
                            "on",
                            "off"
                          ],
                          "x-yaml-boolean": true
                        }
                      ],
                      "default": false,
                      "description": "Supports Tilt",
                      "title": "Supports tilt"
                    }
                  },
                  "required": [
                    "id"
                  ]
                },
                "description": "Available Covers",
                "title": "Covers"
              }
            },
            "required": [
              "host"
            ],
            "description": "ESPHome API Settings",
            "title": "Esphome api",
            "x-dependencies": {
              "protocol": [
                "esphome_api"
              ]
            }
          }
        },
        "required": [
          "id",
          "name",
          "protocol"
        ]
      },
      "description": "Remote devices that can be controlled from this boneIO.",
      "title": "Remote devices"
    }
  }
}