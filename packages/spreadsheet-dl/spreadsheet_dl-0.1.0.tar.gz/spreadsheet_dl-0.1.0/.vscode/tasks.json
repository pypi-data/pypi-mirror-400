{
  "version": "2.0.0",
  "tasks": [
    // ========================================================================
    // Testing Tasks
    // ========================================================================
    {
      "label": "Run Tests",
      "type": "shell",
      "command": "uv",
      "args": ["run", "pytest", "-v"],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Run Tests (with coverage)",
      "type": "shell",
      "command": "uv",
      "args": ["run", "pytest", "-v", "--cov=src", "--cov-report=term-missing"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Run Tests (current file)",
      "type": "shell",
      "command": "uv",
      "args": ["run", "pytest", "-v", "${file}"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },

    // ========================================================================
    // Linting & Formatting Tasks
    // ========================================================================
    {
      "label": "Run Lint",
      "type": "shell",
      "command": "uv",
      "args": ["run", "ruff", "check", "."],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Run Lint (fix)",
      "type": "shell",
      "command": "uv",
      "args": ["run", "ruff", "check", "--fix", "."],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Run Format",
      "type": "shell",
      "command": "uv",
      "args": ["run", "ruff", "format", "."],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Run Format (check only)",
      "type": "shell",
      "command": "uv",
      "args": ["run", "ruff", "format", "--check", "."],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },

    // ========================================================================
    // Type Checking Tasks
    // ========================================================================
    {
      "label": "Run Type Check",
      "type": "shell",
      "command": "uv",
      "args": ["run", "mypy", "src/"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },

    // ========================================================================
    // Combined Quality Tasks
    // ========================================================================
    {
      "label": "Quality Check",
      "type": "shell",
      "command": "./scripts/check.sh",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Full Quality (lint + format + type check)",
      "type": "shell",
      "command": "uv run ruff check . && uv run ruff format --check . && uv run mypy src/",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },

    // ========================================================================
    // Dependency Management Tasks
    // ========================================================================
    {
      "label": "Sync Dependencies",
      "type": "shell",
      "command": "uv",
      "args": ["sync"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Sync Dependencies (all extras)",
      "type": "shell",
      "command": "uv",
      "args": ["sync", "--all-extras"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
}
