{
    "project": "Lume",
    "author": "Dorocha - @dorochadev",
    "version": "0.1.0",
    "description": "A premium JSON viewer CLI for modern developers.",
    "core_features": {
        "cli_interface": {
            "commands": [
                {
                    "name": "fetch",
                    "description": "Grab JSON from any remote endpoint.",
                    "options": [
                        "-X, --method",
                        "-H, --header",
                        "-d, --data",
                        "--timeout"
                    ]
                },
                {
                    "name": "open",
                    "description": "Load and browse local JSON files.",
                    "options": [
                        "--display [tree|box]"
                    ]
                }
            ],
            "frameworks": [
                "Click",
                "Rich",
                "Textual"
            ]
        },
        "display_modes": [
            {
                "type": "tree",
                "pros": [
                    "Hierarchical view",
                    "Great for deep nesting",
                    "Classic explorer feel"
                ]
            },
            {
                "type": "box",
                "pros": [
                    "Card-based layout",
                    "Quick visual scanning",
                    "Modern dashboard aesthetic"
                ]
            }
        ],
        "networking": {
            "engine": "HTTPX",
            "capabilities": [
                "Async support",
                "Connection pooling",
                "Advanced timeouts",
                "Follow redirects"
            ]
        }
    },
    "metadata": {
        "created_at": "2026-01-06T22:50:00Z",
        "license": "MIT",
        "repository": "https://github.com/dorochadev/lume"
    }
}