#[test]
fn return_from_try() {
    const func = ():int => {
        try {
            return 42;
        } catch {
            return 100;
        }
    };
    assert_eq(func(), 42);
}

#[test]
fn try_error_val() {
    let caught;

    try throw({42, 78, 'hi'});
    catch (error: unknown) {
        caught = true;
        assert_eq(error, {42, 78, 'hi'});
    }

    assert(caught);
}

#[test]
fn std_error() {
    let caught;

    try Std.DNE('this function does not exist');
    catch (error: str) {
        caught = true;
        assert(error.contains('FuncDne'));
    }

    assert(caught);
}

#[test]
fn nested_try() {
    let caught;
    try {
        try {
            try {
                throw('hello')
            } catch (error: str) {
                throw(error + ', world');
            }
        } catch (error: str) {
            throw(error + '!!');
        }
    } catch (error: str) {
        caught = error;
    }
    assert_eq(caught, 'hello, world!!');
}
