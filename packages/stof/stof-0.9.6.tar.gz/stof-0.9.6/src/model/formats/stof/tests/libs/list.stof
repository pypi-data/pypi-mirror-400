    a.sort();
    assert_eq(a, [3, 6, 7, 23, 45]);
}

#[test]
fn is_uniform() {
    let a = [1, 2, 3];
    let b = ['hi', false];
    assert(a.is_uniform());
    assert(!b.is_uniform());
}

#[test]
fn to_uniform() {
    let a = ['10kg', 34g, 100mg, false];
    a.to_uniform('g');
    assert(a.is_uniform());
    assert_eq(a, [10_000g, 34g, 0.1g, 0g]);
}

#[test]
fn edit_inner() {
    let a = [[]];
    
    let inner = a.front();
    inner.push_back(5);

    assert_eq(a, [[5]]);
}


