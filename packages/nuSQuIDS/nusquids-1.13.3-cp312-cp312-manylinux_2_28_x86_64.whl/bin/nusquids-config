#!/bin/bash
# nuSQuIDS configuration script
# Generated by configure

prefix="/project"
libdir="${prefix}/lib"
includedir="${prefix}/include"
version="1.13.3"

# Dependency flags (resolved at configure time)
SQUIDS_CFLAGS="-I/tmp/tmpjl3t47k1/build/_deps/squids/install/include -Wno-abi"
SQUIDS_LDFLAGS="-L/tmp/tmpjl3t47k1/build/_deps/squids/install/lib -lSQuIDS"
GSL_CFLAGS=""
GSL_LDFLAGS="-lgsl -lgslcblas -lm "
HDF5_CFLAGS="-I/usr/lib64/../include"
HDF5_LDFLAGS="-L/usr/lib64 -lhdf5_hl -lhdf5 -Wl,-z,relro -Wl,-z,now -Wl,-z,now -Wl,--as-needed -lsz -lz -ldl -lm -Wl,-rpath -Wl,/usr/lib64"

usage() {
    cat <<EOF
Usage: nusquids-config [OPTIONS]
Options:
  --prefix       Print installation prefix
  --incdir       Print include directory
  --libdir       Print library directory
  --cflags       Print compiler flags (includes dependencies)
  --libs         Print linker flags (includes dependencies)
  --version      Print nuSQuIDS version
  --help         Print this message
EOF
    exit $1
}

if [ $# -eq 0 ]; then
    usage 1
fi

while [ $# -gt 0 ]; do
    case "$1" in
        --prefix)
            echo "$prefix"
            ;;
        --incdir)
            echo "$includedir"
            ;;
        --libdir)
            echo "$libdir"
            ;;
        --cflags)
            echo "-I${includedir} ${SQUIDS_CFLAGS} ${GSL_CFLAGS} ${HDF5_CFLAGS}"
            ;;
        --libs)
            echo "-L${libdir} -lnuSQuIDS ${SQUIDS_LDFLAGS} ${GSL_LDFLAGS} ${HDF5_LDFLAGS}"
            ;;
        --version)
            echo "$version"
            ;;
        --help)
            usage 0
            ;;
        *)
            echo "Unknown option: $1" 1>&2
            usage 1
            ;;
    esac
    shift
done
