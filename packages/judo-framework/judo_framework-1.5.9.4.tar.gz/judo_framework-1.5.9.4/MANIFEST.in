# Include essential documentation
include README.md
include CHANGELOG.md
include CONTRIBUTING.md
include LICENSE
include requirements.txt

# Include the main package
recursive-include judo *.py *.png *.jpg

# Include examples (clean examples only)
recursive-include examples *.py *.feature *.json *.md

# Include logos for HTML reports (both locations for compatibility)
recursive-include assets/logos *.png *.jpg
recursive-include judo/assets/logos *.png *.jpg

# Exclude development and test files
global-exclude *.pyc
global-exclude __pycache__
global-exclude .DS_Store
global-exclude *.egg-info
global-exclude build/
global-exclude dist/
global-exclude tests/
global-exclude test_*/
global-exclude *_test.py
global-exclude test_*.py
# IMPORTANT: Include test_suite.py specifically (it's not a test file)
include judo/runner/test_suite.py
global-exclude features/
global-exclude behave.ini
global-exclude publish.py
global-exclude .git/
global-exclude .github/
global-exclude .vscode/
global-exclude docs-site/
global-exclude simulation_*/
global-exclude judo_reports/