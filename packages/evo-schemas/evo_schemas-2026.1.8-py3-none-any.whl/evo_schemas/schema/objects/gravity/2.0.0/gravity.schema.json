{
  "$id": "/objects/gravity/2.0.0/gravity.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Gravity survey data.",
  "type": "object",
  "allOf": [
    {
      "$ref": "/components/base-spatial-data-properties/1.1.0/base-spatial-data-properties.schema.json"
    },
    {
      "properties": {
        "schema": {
          "const": "/objects/gravity/2.0.0/gravity.schema.json"
        },
        "type": {
          "description": "Survey mode.",
          "type": "string",
          "enum": [
            "GROUND",
            "AIR",
            "MARINE"
          ]
        },
        "survey_type": {
          "description": "Type of survey.",
          "type": "string",
          "enum": [
            "GRAV",
            "FTG",
            "AGG"
          ]
        },
        "base_stations": {
          "type": "array",
          "description": "Base stations.",
          "minItems": 1,
          "items": {
            "type": "object",
            "description": "Base station.",
            "properties": {
              "name": {
                "type": "string",
                "description": "Base station name."
              },
              "location": {
                "description": "Base station location.",
                "$ref": "/elements/coordinates-3d/1.0.0/coordinates-3d.schema.json"
              },
              "collections": {
                "description": "Survey collections taken at the gravity base station.",
                "type": "array",
                "minItems": 1,
                "items": {
                  "description": "Gravity survey collection.",
                  "$ref": "/components/survey-collection/1.0.1/survey-collection.schema.json"
                }
              }
            },
            "required": [
              "name",
              "location",
              "collections"
            ]
          }
        },
        "attribute_definition_list": {
          "description": "List of attribute definitions. These will be referenced in survey collections.",
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "/components/survey-attribute-definition/1.0.1/survey-attribute-definition.schema.json"
          }
        },
        "collections": {
          "description": "Gravity survey collections.",
          "type": "array",
          "minItems": 1,
          "items": {
            "description": "Gravity survey collection.",
            "$ref": "/components/survey-collection/1.0.1/survey-collection.schema.json"
          }
        }
      }
    }
  ],
  "required": [
    "schema",
    "type",
    "survey_type",
    "attribute_definition_list",
    "collections"
  ],
  "unevaluatedProperties": false
}
