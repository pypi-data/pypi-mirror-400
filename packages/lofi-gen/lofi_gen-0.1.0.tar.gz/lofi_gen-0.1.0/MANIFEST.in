# Include important files in the package distribution
include README.md
include LICENSE
include requirements.txt
include pyproject.toml

# Exclude unnecessary files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
global-exclude *.swp
global-exclude *.swo

# Exclude build artifacts and cache
prune build
prune dist
prune *.egg-info
prune .git
prune .claude
prune generated_music
prune __pycache__

# Exclude test and development files
prune tests
exclude main.py
exclude structure.txt
exclude output.wav
