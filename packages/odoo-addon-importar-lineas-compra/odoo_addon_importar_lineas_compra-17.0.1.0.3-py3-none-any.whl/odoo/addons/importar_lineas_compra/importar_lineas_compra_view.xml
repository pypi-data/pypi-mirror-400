<?xml version="1.0"?>
<odoo>
	<data>
		<record id="purchase_order_wizard_view" model="ir.ui.view">
			<field name="name">Import Order Lines</field>
			<field name="model">purchase.order.line.wizard</field>
			<field name="arch" type="xml">
				<form>
					<group>
					    <field name="import_option" widget="radio"/>
						<field name="purchase_order_file"/>
					</group>
					<group>
					    <group>
    					    <field name="import_prod_option" widget="radio"/>
    					</group>	
    					<group>
    					    <field name="product_details_option" widget="radio"/>
    					</group>
					</group>
					
					<group>
                      <group string="Descarga ejemplos">
                          <field name="down_samp_file" widget="checkbox" />
                          <field name="sample_option" widget="radio" 
						  	invisible="down_samp_file != True"/>
                          <button name="download_auto" string="Descarga fichero de ejemplo" 
						  	type="object" class="oe_highlight" 
							invisible="down_samp_file != True"/>
                      </group>
                    </group>
					
					<footer>
						<button string="Importar" name="import_sol" class="oe_highlight" type="object"/>
						or
                        <button name="cancel" string="Cancelar" class="oe_link" special="cancel"/>
					</footer>
				</form>
			</field>
		</record>

		<record id="import_order_line_action" model="ir.actions.act_window">
			<field name="name">Import Order Lines</field>
			<field name="res_model">purchase.order.line.wizard</field>
			<field name="target">new</field>
			<field name="view_id" ref="purchase_order_wizard_view"/>
			<field name="view_mode">form</field>
		</record>

		<record id="purchase_order_inherit_view" model="ir.ui.view">
			<field name="name">purchase Order</field>
			<field name="model">purchase.order</field>
			 <field name="inherit_id" ref="purchase.purchase_order_form"/>
			<field name="arch" type="xml">
				<header>
						<button name="%(import_order_line_action)d" 
						string="Importar lineas desde fichero"
                        type="action" 
						invisible="state in ('purchase', 'done')"
                        class="btn-primary"/>
				</header>
			</field>
		</record>
		
	</data>
</odoo>
