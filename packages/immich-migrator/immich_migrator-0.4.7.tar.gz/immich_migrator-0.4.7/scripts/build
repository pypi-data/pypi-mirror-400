#!/usr/bin/env bash
# Build Python package using uv
# Usage: ./scripts/build

set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
PROJECT_ROOT="$(cd "${SCRIPT_DIR}/.." && pwd)"

cd "${PROJECT_ROOT}"

echo "ðŸ”¨ Building package with uv..."
uv build

echo ""
echo "âœ… Build complete!"
ls -lh dist/
